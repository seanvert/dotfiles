Config {
   -- appearance
     font =         "xft:DroidSansMono Nerd Font:size=9"
   , bgColor =      "#fbf1c7" -- "#0dd5db"
   , fgColor =      "#3c3836"
   -- TODO fazer um shell script que pegue a resolução e coloque aqui pra n ficar uma merda
   , position =     Top -- OnScreen { screenNr = , position = Top} -- C 100
   , border =       NoBorder --BottomB
   , borderColor =  "#222222"-- "#0dd5db"
   , alpha = 255 -- 0 é transparente
   -- layout
   , sepChar =  "%"   -- delineator between plugin names and straight text
   , alignSep = "}{"  -- separator between left-right alignment
   , template = "%StdinReader%<fc=#000000,#bdae93>%battery% %multicpu% %coretemp%</fc><fc=#000000,#d5c4a1> %memory% %swap%</fc><fc=#000000,#ebdbb2>%dynnetwork%</fc>  %todo_pipe%}{ %date%" -- | %kbd% %bright%"
      -- general behavior
   , lowerOnStart =     True    -- send to bottom of window stack on start
   , hideOnStart =      False   -- start with window unmapped (hidden)
   , allDesktops =      True    -- show on all desktops
   , overrideRedirect = True    -- set the Override Redirect flag (Xlib)
   , pickBroadest =     False   -- choose widest display (multi-monitor)
   , persistent =       True    -- enable/disable hiding (True = disabled)

   -- plugins
   --   Numbers can be automatically colored according to their value. xmobar
   --   decides color based on a three-tier/two-cutoff system, controlled by
   --   command options:
   --     --Low sets the low cutoff
   --     --High sets the high cutoff
   --
   --     --low sets the color below --Low cutoff
   --     --normal sets the color between --Low and --High cutoffs
   --     --High sets the color above --High cutoff
   --
   --   The --template option controls how the plugin is displayed. Text
   --   color can be set by enclosing in <fc></fc> tags. For more details
   --   see http://projects.haskell.org/xmobar/#system-monitor-plugins.
   , commands =

     -- weather monitor
     --        [ Run Weather "RJTT" [ "--template", "<skyCondition> | <fc=#4682B4><tempC></fc>°C | <fc=#4682B4><rh></fc>% | <fc=#4682B4><pressure></fc>hPa"
     --                             ] 36000

     -- network activity monitor (dynamic interface resolution)
       [ Run StdinReader
         , Run DynNetwork     [ "--template" , "<fc=#076678,#ebdbb2> \xf0aa</fc> <tx>kB/s <fc=#9d0006,#ebdbb2>\xf0ab</fc> <rx>kB/s <fc=#ebdbb2,#fbf1c7>\xe0b0</fc>" --<dev> pra mostrar o device
                             , "--Low"      , "1000"       -- units: B/s
                             , "--High"     , "5000"       -- units: B/s
                             , "--low"      , "#79740e,#ebdbb2"
                             , "--normal"   , "#b57614,#ebdbb2"
                             , "--high"     , "#d65d0e,#ebdbb2"
                             ] 10

        -- cpu activity monitor
        , Run MultiCpu       [ "--template" , "<total>%"
                             , "--Low"      , "50"         -- units: %
                             , "--High"     , "85"         -- units: %
                             , "--low"      , "#3c3836,#bdae93><fc=#79740e,#bdae93>\xf108 </fc"
                             , "--normal"   , "#3c3836,#bdae93><fc=#b57614,#bdae93>\xf108 </fc"
                             , "--high"     , "#3c3836,#bdae93><fc=#d65d0e,#bdae93>\xf108 </fc"
                             ] 10

        -- cpu core temperature monitor
        , Run CoreTemp       [ "--template" , "<fc=#3c3836,#bdae93><core0>°C <fc=#bdae93,#d5c4a1>\xe0b0</fc></fc>"
                             , "--Low"      , "70"        -- units: °C
                             , "--High"     , "80"        -- units: °C
                             , "--low"      , "#3c3836,#bdae93><fc=#79740e,#bdae93>\xf2ca</fc" 
                             , "--normal"   , "#3c3836,#bdae93><fc=#b57614,#bdae93>\xf2ca</fc></fc"
                             , "--high"     , "#3c3836,#bdae93><fc=#d65d0e,#bdae93>\xf2ca</fc></fc"
                             ] 50

        -- memory usage monitor
        , Run Memory         [ "--template" ,"<fc=#F92672,#d5c4a1>\xf2db</fc> <usedratio>%"
                             , "--Low"      , "20"        -- units: %
                             , "--High"     , "90"        -- units: %
                             , "--low"      , "#A6E22E,#d5c4a1"
                             , "--normal"   , "#FD971F,#d5c4a1"
                             , "--high"     , "#F92672,#d5c4a1"
                             ] 10
        , Run Swap ["--template", "<fc=#F92672,#d5c4a1>Swap</fc> <usedratio>% <fc=#d5c4a1,#ebdbb2>\xe0b0</fc>"] 10

        -- battery monitor
        , Run Battery        [ "--template" , "<fc=#a89984,#bdae93>\xe0b0</fc> <acstatus>" 
                             , "--Low"      , "10"        -- units: %
                             , "--High"     , "80"        -- units: %
                             , "--low"      , "#F92672"
                             , "--normal"   , "#FD971F"
                             , "--high"     , "#A6E22E"

                             , "--" -- battery specific options
                                       -- discharging status
                                       , "-o"	, "(<timeleft>)"
                                       -- AC "on" status
                                       , "-O"	, "<fc=#FD971F>\xf241</fc>" --Carregando</fc>"
                                       -- charged status
                                       , "-i"	, "<fc=#b8bb26,#bdae93>\xf240</fc>" -- "<fc=#A6E22E>Cheia</fc>"
                             ] 50

        -- time and date indicator
        --   (%F = y-m-d date, %a = day of week, %T = h:m:s time)
        , Run Date           "<fc=#076678,#fbf1c7>\xe0b2</fc><fc=#ffffff,#076678><fc=#F2e5bc,#076678> \xf133</fc> %F <fc=#66D9EF,#076678>%a</fc> <fc=#F2e5bc,#076678>\xf017</fc> %T</fc>" "date" 10

        -- keyboard layout indicator
        , Run Kbd            [ ("us(dvorak)" , "<fc=#00008B>DV</fc>")
                             , ("us"         , "<fc=#8B0000>US</fc>")
                             ]
        , Run Locks
        , Run PipeReader "/tmp/.todo-pipe" "todo_pipe"
        --, Run CommandReader "./test.sh" "todo_pipe"
	--, Run Brightness ["-t", "<fc=#66D9EF>\xf185</fc> <percent>%"] 60
        ]
   }
